#!/usr/bin/env bash
# uses the cache file generated by last-export-dates.job:
# https://github.com/purarue/HPI-personal/blob/master/jobs/linux/last_export_dates.job

CACHE_FILE="${HPIDATA}/last-export-dates.txt"

# i.e. skip running this on my phone if the cache
# file doesn't exist, only need to be warned about
# this when I'm able to do something about it
[[ ! -f "${CACHE_FILE}" ]] && exit 0

DATA="$(cat "${CACHE_FILE}")"
if [[ -n "$DATA" ]]; then
	echo "$DATA"
	exit 3
else
	exit 0
fi
