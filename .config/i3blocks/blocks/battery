#!/bin/bash
# Modified from https://github.com/LukeSmithxyz/voidrice/blob/archi3/.local/bin/statusbar/battery

# Give a battery name (e.g. BAT0) as an argument.

declare color capacity status emoji_status warn
capacity="$(cat /sys/class/power_supply/"$1"/capacity)" || exit
status="$(cat /sys/class/power_supply/"$1"/status)"
emoji_status="$(sed -e "s/,//;s/Discharging/ğŸ”‹/;s/Not Charging/ğŸ›‘/;s/Charging/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g" <<<"$status")"

if ((capacity >= 75)); then
	color="#00ff00"
elif ((capacity >= 50)); then
	color="#ffffff"
elif ((capacity >= 25)); then
	color="#ffff00"
else
	color="#ff0000"
	warn="â—"
fi

# if charging, or if warn isn't set, default to white
[[ "$status" = "Charging" ]] || [[ -z "$warn" ]] && {
	color="#ffffff"
	warn=""
}

# write to cache file
printf '%d,%d,%s\n' "$(date +'%s')" "${capacity}" "${status}" >> "${HOME}/data/battery.csv"

echo -e "<span color='${color}'>${emoji_status}${warn}${capacity}%</span>"
